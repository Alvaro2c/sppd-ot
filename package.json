{
  "name": "sppd-ot",
  "version": "1.0.0",
  "description": "Spanish Public Procurement Data - Open Tenders - A comprehensive, interactive website providing transparent access to Spanish public procurement data",
  "main": "index.html",
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "lint:js": "eslint js/*.js",
    "lint:css": "stylelint css/*.css",
    "lint:html": "html-validate *.html",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "validate:json": "python3 -m json.tool data/sample-data.json > /dev/null",
    "validate:data": "node scripts/validate-data.js",
    "serve": "python3 -m http.server 8000",
    "build": "echo \"Static site - no build step required\"",
    "deploy": "echo \"Deploy to GitHub Pages\""
  },
  "keywords": [
    "public-procurement",
    "spain",
    "data-visualization",
    "open-data",
    "government",
    "tenders",
    "contracts"
  ],
  "author": "SPPD Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sppd-ot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sppd-ot/issues"
  },
  "homepage": "https://yourusername.github.io/sppd-ot",
  "devDependencies": {
    "eslint": "^8.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "html-validate": "^8.0.0",
    "broken-link-checker": "^0.7.2",
    "pa11y": "^6.0.0",
    "lighthouse": "^11.0.0",
    "playwright": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 